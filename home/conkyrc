# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes
# fiddle with window
use_spacer right
# Use Xft?
use_xft yes
xftfont monospace:size=7 #tamsyn, monospace
xftalpha 0.8
text_buffer_size 2048
# Update interval in seconds
update_interval 1.5
# Update interval in seconds when conky is running on battery power
update_interval_on_battery 3
# Draw shades?
draw_shades yes
# Text stuff
draw_outline no # amplifies text if yes
draw_borders no
uppercase no # set to yes if you want all text to be in uppercase
# Stippled borders?
stippled_borders 3
# border width
border_width 10
# Default colors and also border colors, grey90 == #e5e5e5
default_color white
own_window_colour brown
own_window_transparent yes
# Max width
#maximum_width 360
# Text alignment, other possible values are commented
alignment top_left
# Gap between borders of screen and text
gap_x 760
gap_y 15
total_run_times 0


# stuff after 'TEXT' will be formatted on screen
 
TEXT

${color grey}Today is $alignr${exec date +'Day '%j' '%a' '%b' '%e'/'%m'/'%Y' '%Z}
${color yellow}SYSTEM ${hr 2}${color grey}
Hostname:$alignr${exec whoami}@$nodename
Distro$alignr A $sysname with $kernel on $machine
System Uptime:$alignr $uptime
Battery:$alignr${exec acpi | ack -o 'Discharging|Full|Charging'} at $battery_percent%
${color yellow}CPU ${hr 2}${color grey}
${color 2CFF00}Average${color grey}  ${color 2CFF00}$alignr${cpu}%${color grey}
$alignc ${cpugraph cpu0 25,250 000000 2CFF00 100}
$alignc ${color FF6E00}CPU1: ${cpu cpu1}%  ${color CB0C29}CPU2: ${cpu cpu2}%  ${color 49A835}CPU3: ${cpu cpu3}%  ${color 2D7DB3}CPU4: ${cpu cpu4}%
${color yellow}RAM${color D13D77}  $alignc ${mem} / ${memmax} $alignr $memperc% ${color grey}
${membar}
${color yellow}SWAP${color 49A835} $alignc ${swap} / ${swapmax} $alignr ${swapperc}% ${color grey}
${swapbar}
